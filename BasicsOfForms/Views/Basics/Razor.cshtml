
@{
    ViewBag.Title = "Razor";
}

<h2>Razor</h2>
@using (Html.BeginForm("Razor", "Basics", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Email")
        @Html.TextBox("email")
    </div>

    <div class="form-group">
        @Html.Label("Password")
        @Html.Password("password")
    </div>

    <div class="form-group">
        @Html.Label("Password Confirmation")
        @Html.Password("passwordconfirmation")
    </div>

    <div>
        <button type="submit" class="btn btn-default">Submit</button>
    </div>
}

